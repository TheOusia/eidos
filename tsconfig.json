{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"noEmit": true,
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"skipLibCheck": true,
		"paths": {
			"@assets/*": ["./assets/*"],
			"@src/*": ["./src/*"],
			"@components/*": ["./components/*"]
		}
	},
	"exclude": ["dist"]
}
